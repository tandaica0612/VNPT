@{ Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Đăng nhập"; }

@model VNPT.Data.Models.Membership
<form asp-action="Login" asp-controller="Membership">
    <div class="login-box">
        <div class="login-logo">
            <a title="@VNPT.Data.Helpers.AppGlobal.Title" href="/Home/Index"><img class="img-thumbnail" style="background-color:transparent; border-width:0px; width:30%; height:30%;" src="@VNPT.Data.Helpers.AppGlobal.LogoURLFull" title="@VNPT.Data.Helpers.AppGlobal.Title" alt="@VNPT.Data.Helpers.AppGlobal.Title" /></a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg" style="font-size:16px; font-weight:bold; color:red;">Đăng nhập hệ thống</p>
            <div class="form-group has-feedback">
                @(Html.TextBoxFor(Model => Model.Phone, new { placeholder = "Điện thoại", @class = "form-control" }))               
                <span class="glyphicon glyphicon-phone form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @(Html.TextBoxFor(Model => Model.Password, new { placeholder = "Mật khẩu", @class = "form-control", @type = "password" }))                
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    @*<div class="checkbox icheck">
                        <label>
                            <input type="checkbox"> Ghi nhớ thông tin
                        </label>
                    </div>*@
                </div>
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat"><i class="fa fa-sign-in"></i></button>
                </div>
            </div>
        </div>
    </div>
</form>